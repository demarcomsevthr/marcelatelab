<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:t="urn:import:it.mate.econyx.client.text" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui">

  <g:HTMLPanel>
    <g:VerticalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Nome:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:TextBox ui:field="screenName" width="20em" focus="true"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Email:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:TextBox ui:field="emailAddress" width="80em"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Saldo:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><t:CurrencyBox ui:field="billingAccount" width="12em"/>
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>

</ui:UiBinder>