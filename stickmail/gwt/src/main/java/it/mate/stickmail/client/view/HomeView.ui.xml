<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel">
  
    <g:HorizontalPanel>
      <g:Label text="" ui:field="signLbl" addStyleNames="ui-sendToLbl"/>
      <p:TouchAnchor text="Sign In" ui:field="signBtn" addStyleNames="ui-signBtn"/>
    </g:HorizontalPanel>
    
    <m:MTextArea ui:field="bodyArea" addStyleNames="ui-bodyArea"/>
    
    <g:Label text="Send on:" addStyleNames="ui-sendOnLbl"/>
    
    <g:HorizontalPanel>
      <ph:PhCalendarBox width="10em" ui:field="calBox" addStyleNames="ui-calBox"/>
      <ph:PhTimeBox width="4em" ui:field="timeBox" addStyleNames="ui-timeBox"/>
      <p:TouchAnchor text="NOW" ui:field="nowBtn" addStyleNames="ui-nowBtn"/>
    </g:HorizontalPanel>
    
    <p:TouchButton text="STICK MAIL" ui:field="sendBtn"/>
    
    <g:VerticalPanel ui:field="outputPanel">
      <g:Label ui:field="outputLbl"></g:Label>
    </g:VerticalPanel>

    <g:Label text="Build 101" ui:field="homeLbl" addStyleNames="ui-homeLbl"/>
    
  </g:HTMLPanel>
  
</ui:UiBinder>