<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/web-context.xml</param-value>
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>init</servlet-name>
    <servlet-class>it.mate.stickmail.server.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>stickFacade</servlet-name>
    <servlet-class>it.mate.stickmail.server.services.StickFacadeImpl</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>stickFacade</servlet-name>
    <url-pattern>*.stickFacade</url-pattern>
  </servlet-mapping>
  
  <security-constraint>
    <web-resource-collection>
      <!-- 
      <url-pattern>/secureAdmin.html</url-pattern>
       -->
      <url-pattern>*.stickFacade</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  
</web-app>