<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:t="urn:import:it.mate.econyx.client.text" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui">

  <g:HTMLPanel>
    <g:VerticalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Codice:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:TextBox ui:field="codice" width="20em" focus="true"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Descrizione:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:TextBox ui:field="nome" width="60em"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Prezzo:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><t:CurrencyBox ui:field="prezzo" width="12em"/>
      </g:HorizontalPanel>
      
      <gc:Spacer height="20px"/>
      
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Larghezza:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:IntegerBox ui:field="larghezza" width="8em"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Altezza:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:IntegerBox ui:field="altezza" width="8em"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Numero di righe:" width="8em" horizontalAlignment="ALIGN_RIGHT"/><g:IntegerBox ui:field="numRighe" width="8em"/>
      </g:HorizontalPanel>
      
    </g:VerticalPanel>
  </g:HTMLPanel>

</ui:UiBinder>