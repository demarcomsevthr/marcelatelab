<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:ckd="urn:import:it.mate.ckd.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"       
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default">

  <ui:with field="style" type="it.mate.ckd.client.ui.theme.custom.CustomMainCss"/>
  
  <g:HTMLPanel addStyleNames="{style.homePanel} {style.outputPanel}">
  
    <m:Button ui:field="ckdHelpBtn" text="" round="true" addStyleNames="ckd-HelpBtn">
      <ui:attribute name="text" description="text" key="helpBtn.text"/>
    </m:Button>
    
    <g:VerticalPanel>
    
      <!-- ==========    COCKCROFT SECTION    ========== -->
    
      <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
         <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
         <g:Label text="Cockcroft - Gault" addStyleNames="{style.valoriLbl}"/>
      </g:HorizontalPanel>
    
      <g:HorizontalPanel>
      
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="GFR ml/min" addStyleNames="{style.ckdLabel}"/>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="cockcroftGfrBox" width="7.1em" height="1.4em" addStyleNames="{style.ckdGfr}"/>
        <gc:Spacer width="0.3em"/>
        <g:Label ui:field="cockcroftGfrStadium" width="2.0em" height="1.4em" addStyleNames="{style.ckdStadium}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel ui:field="cockcroftRiskPanel">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="" addStyleNames="{style.ckdLabel}">
          <ui:attribute name="text" description="text" key="risk.text"/>
        </g:Label>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="cockcroftRiskBox" width="9.6em" height="1.4em" addStyleNames="{style.ckdRisk}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel ui:field="bsaPanel">
        <gc:Spacer width="7.6em"/>
        <g:HTML ui:field="bsaHtml" HTML="BSA = 0.00" addStyleNames="{style.ckdLabel} ckd-BsaLabel"></g:HTML>
      </g:HorizontalPanel>

      <g:HorizontalPanel>
        <gc:Spacer height="0.4em"/>
      </g:HorizontalPanel>
      
      
      <!-- ==========    MDRD 1 SECTION    ========== -->
    
      <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <!-- 
        <g:Label text="MDRD-4P (CREATININA CALIBRATA)" addStyleNames="{style.valoriLbl}"/>
         -->
        <g:HTMLPanel addStyleNames="{style.valoriLbl} ckd-MDRD" height="2.2em">
          <p style="font-size:10pt">MDRD 4P</p>
          <p style="font-size:8pt"><ui:msg key="mdrd1.subtitle.text">mdrd1 subtitle</ui:msg></p>
        </g:HTMLPanel>
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="GFR ml/min" addStyleNames="{style.ckdLabel}"/>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="mdrdGfrBox" width="7.1em" height="1.4em" addStyleNames="{style.ckdGfr}"/>
        <gc:Spacer width="0.3em"/>
        <g:Label ui:field="mdrdGfrStadium" width="2.0em" height="1.4em" addStyleNames="{style.ckdStadium}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel ui:field="mdrdRiskPanel">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="" addStyleNames="{style.ckdLabel}">
          <ui:attribute name="text" description="text" key="risk.text"/>
        </g:Label>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="mdrdRiskBox" width="9.6em" height="1.4em" addStyleNames="{style.ckdRisk}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer height="0.4em"/>
      </g:HorizontalPanel>
      
      
      <!-- ==========    MDRD 2 SECTION    ========== -->
    
      <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <!-- 
        <g:Label text="MDRD-4P" addStyleNames="{style.valoriLbl}"/>
         -->
        <g:HTMLPanel addStyleNames="{style.valoriLbl} ckd-MDRD" height="2.2em">
          <p style="font-size:10pt">MDRD 4P</p>
          <p style="font-size:8pt"><ui:msg key="mdrd2.subtitle.text">mdrd2 subtitle</ui:msg></p>
        </g:HTMLPanel>
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="GFR ml/min" addStyleNames="{style.ckdLabel}"/>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="mdrdNcGfrBox" width="7.1em" height="1.4em" addStyleNames="{style.ckdGfr}"/>
        <gc:Spacer width="0.3em"/>
        <g:Label ui:field="mdrdNcGfrStadium" width="2.0em" height="1.4em" addStyleNames="{style.ckdStadium}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel ui:field="mdrdNcRiskPanel">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="" addStyleNames="{style.ckdLabel}">
          <ui:attribute name="text" description="text" key="risk.text"/>
        </g:Label>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="mdrdNcRiskBox" width="9.6em" height="1.4em" addStyleNames="{style.ckdRisk}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer height="0.4em"/>
      </g:HorizontalPanel>
      
      
      <!-- ==========    EPI-GFR SECTION    ========== -->
    
      <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
         <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
         <g:Label text="CKD-EPI" addStyleNames="{style.valoriLbl}"/>
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="GFR ml/min" addStyleNames="{style.ckdLabel}"/>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="epiGfrBox" width="7.1em" height="1.4em" addStyleNames="{style.ckdGfr}"/>
        <gc:Spacer width="0.3em"/>
        <g:Label ui:field="epiGfrStadium" width="2.0em" height="1.4em" addStyleNames="{style.ckdStadium}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel ui:field="epiRiskPanel">
        <gc:Spacer addStyleNames="ckd-LeftPaddingBox"/>
        <g:Label text="" addStyleNames="{style.ckdLabel}">
          <ui:attribute name="text" description="text" key="risk.text"/>
        </g:Label>
        
        <gc:Spacer addStyleNames="{style.boxSpacer}"/>
        <g:Label ui:field="epiRiskBox" width="9.6em" height="1.4em" addStyleNames="{style.ckdRisk}"/>
        
      </g:HorizontalPanel>
      
      <g:HorizontalPanel>
        <gc:Spacer height="0.4em"/>
      </g:HorizontalPanel>
    
    </g:VerticalPanel>
  
  </g:HTMLPanel>
  
</ui:UiBinder>