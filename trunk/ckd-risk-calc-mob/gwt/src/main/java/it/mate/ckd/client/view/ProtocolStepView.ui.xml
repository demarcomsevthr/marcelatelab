        <g:Label text="Step 1"/>
      </gc:SimpleContainer>
      <gc:SimpleContainer addStyleNames="ckd-ProtocolStepPanel-center">
        <g:HTML ui:field="questionHtml"></g:HTML>
        <g:HTML ui:field="endHtml" visible="false"></g:HTML>
      </gc:SimpleContainer>
      <gc:SimpleContainer addStyleNames="ckd-ProtocolStepPanel-bottom">
        <p:SmartButton ui:field="answer1Btn" text="Yes" addStyleNames="ckd-ProtocolStepPanel-button"/>
