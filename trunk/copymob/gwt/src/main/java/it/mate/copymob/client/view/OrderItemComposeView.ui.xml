<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:o="urn:import:it.mate.onscommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="app-page-wrapper-panel">

  
    <o:OnsPage>
    
      <o:OnsToolbar>
        <div class="left">
          <o:OnsBackButton text="Back"/>
        </div>
        <div class="center">Composizione Timbro</div>
      </o:OnsToolbar>
      
      <g:VerticalPanel width="100%" horizontalAlignment="center">
        <g:HTML>
          <i>Composizioni il test del timbro</i>
        </g:HTML>
      </g:VerticalPanel>
      
      <o:OnsScroller height="80%" width="100%" ui:field="scroller">
        <o:OnsList ui:field="rowsPanel"/>
        <!-- 
        <o:OnsVerticalPanel width="100%" horizontalAlignment="center" ui:field="rowsPanel"/>
         -->
      </o:OnsScroller>
      
      
      <o:OnsButton text="Save" ui:field="btnSave" addStyleNames="app-timbri-choose-btn"/>

      <g:HorizontalPanel ui:field="controlbar" addStyleNames="app-edit-controlbar">
        <o:OnsButton ui:field="btnEdtBold" icon="fa-bold" addStyleNames="app-edit-controlbar-btn"/>  
        <gc:Spacer width="0.1em"/>
        <o:OnsButton ui:field="btnEdtItalic" icon="fa-italic" addStyleNames="app-edit-controlbar-btn"/>  
        <gc:Spacer width="0.1em"/>
        <o:OnsButton ui:field="btnEdtUnderline" icon="fa-underline" addStyleNames="app-edit-controlbar-btn"/>  
        <gc:Spacer width="0.3em"/>
        <o:OnsButton ui:field="btnEdtAlignLeft" icon="fa-align-left" addStyleNames="app-edit-controlbar-btn"/>  
      </g:HorizontalPanel>

    </o:OnsPage>
    
  </g:HTMLPanel>
  
</ui:UiBinder>