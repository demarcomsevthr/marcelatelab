<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui"
       xmlns:c="urn:import:com.google.gwt.user.cellview.client" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui">

  <g:HTMLPanel>
    <g:FlexTable ui:field="postTable"/>
    <g:VerticalPanel ui:field="commentsPanel" visible="false">
      <g:HTML ui:field="commentsHeaderCount" addStyleNames="ecxCommentsHeaderCount"/>
      <g:FlexTable ui:field="commentsTable"/>
      <g:VerticalPanel>
        <g:Label text="Inserisci il tuo commento:" addStyleNames="ecxAddCommentLabel"/>
        <g:TextArea ui:field="commentArea" width="30em"/>
        <g:Button ui:field="addCommentBtn" text="Invia commento"/>
      </g:VerticalPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>
  
</ui:UiBinder>