<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel">
  
    <gc:Spacer addStyleNames="ui-homeSpacer1"/>
    
    <g:HorizontalPanel width="100%" horizontalAlignment="center">
      <p:TouchAnchor addStyleNames="ui-home-terapies-btn" text="Therapies" ui:field="therapiesBtn">
        <ui:attribute name="text" description="text" key="therapiesBtn.text"/>
      </p:TouchAnchor>
      <p:TouchAnchor addStyleNames="ui-home-reminders-btn" text="Reminders" ui:field="remindersBtn">
        <ui:attribute name="text" description="text" key="remindersBtn.text"/>
      </p:TouchAnchor>
    </g:HorizontalPanel>
    
    <g:HorizontalPanel width="100%" horizontalAlignment="center">
      <p:TouchAnchor addStyleNames="ui-home-doctors-btn" text="Doctors and Tutors" ui:field="doctorsBtn">
        <ui:attribute name="text" description="text" key="doctorsBtn.text"/>
      </p:TouchAnchor>
      <p:TouchAnchor addStyleNames="ui-home-preferences-btn" text="Settings" ui:field="preferencesBtn">
        <ui:attribute name="text" description="text" key="preferencesBtn.text"/>
      </p:TouchAnchor>
    </g:HorizontalPanel>
    
    <g:Label ui:field="homeLbl" addStyleNames="ui-homeLbl"/>
    
  </g:HTMLPanel>
  
</ui:UiBinder>