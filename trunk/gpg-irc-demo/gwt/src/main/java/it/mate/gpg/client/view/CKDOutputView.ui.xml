<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:gpg="urn:import:it.mate.gpg.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"       
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default">

  <ui:with field="style" type="it.mate.gpg.client.ui.theme.custom.CustomMainCss"/>
  
  <g:HTMLPanel addStyleNames="{style.homePanel} {style.outputPanel}">

    <table>
    
      <!-- COCKCROFT SECTION -->
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
             <gc:Spacer width="1.2em"/>
             <g:Label text="Cockcroft" addStyleNames="{style.valoriLbl}"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="GFR (ml/min)" addStyleNames="{style.ckdLabel}"/>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="cockcroftGfrBox" enabled="false" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
             -->
            <g:Label ui:field="cockcroftGfrBox" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
            <gc:Spacer width="0.3em"/>
            <!-- 
            <g:TextBox ui:field="cockcroftGfrStadium" enabled="false" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
             -->
            <g:Label ui:field="cockcroftGfrStadium" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="" addStyleNames="{style.ckdLabel}">
              <ui:attribute name="text" description="text" key="risk.text"/>
            </g:Label>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="cockcroftRiskBox" enabled="false" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
             -->
            <g:Label ui:field="cockcroftRiskBox" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      <!-- MDRD SECTION -->
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
             <gc:Spacer width="0.2em"/>
             <g:Label text="MDRD" addStyleNames="{style.valoriLbl}" width="100%"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="GFR (ml/min)" addStyleNames="{style.ckdLabel}"/>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="mdrdGfrBox" enabled="false" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
             -->
            <g:Label ui:field="mdrdGfrBox" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
            <gc:Spacer width="0.3em"/>
            <!-- 
            <g:TextBox ui:field="mdrdGfrStadium" enabled="false" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
             -->
            <g:Label ui:field="mdrdGfrStadium" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="" addStyleNames="{style.ckdLabel}">
              <ui:attribute name="text" description="text" key="risk.text"/>
            </g:Label>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="mdrdRiskBox" enabled="false" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
             -->
            <g:Label ui:field="mdrdRiskBox" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      <!-- EPI-GFR SECTION -->
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
             <gc:Spacer width="0.3em"/>
             <g:Label text="CKD-EPI" addStyleNames="{style.valoriLbl}" width="100%"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="GFR (ml/min)" addStyleNames="{style.ckdLabel}"/>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="epiGfrBox" enabled="false" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
             -->
            <g:Label ui:field="epiGfrBox" width="7.1em" height="1.6em" addStyleNames="{style.ckdGfr}"/>
            <gc:Spacer width="0.3em"/>
            <!-- 
            <g:TextBox ui:field="epiGfrStadium" enabled="false" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
             -->
            <g:Label ui:field="epiGfrStadium" width="1.6em" height="1.6em" addStyleNames="{style.ckdStadium}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer width="1.2em"/>
            <g:Label text="" addStyleNames="{style.ckdLabel}">
              <ui:attribute name="text" description="text" key="risk.text"/>
            </g:Label>
          </g:HorizontalPanel>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <!-- 
            <g:TextBox ui:field="epiRiskBox" enabled="false" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
             -->
            <g:Label ui:field="epiRiskBox" width="8.0em" height="1.6em" addStyleNames="{style.ckdRisk}"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      </table>  
  
  </g:HTMLPanel>
  
</ui:UiBinder>