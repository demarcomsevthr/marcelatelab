  <ui:with field="style" type="it.mate.gpg.client.ui.theme.custom.CustomMainCss"/>
  
  <g:HTMLPanel addStyleNames="{style.homePanel}">

    <table>
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
             <g:Label text="Cockcroft" addStyleNames="{style.valoriLbl}"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:Label text="GFR (ml/min)"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="cockcroftGfrBox" enabled="false" width="5em" height="1.6em"/>
            <gc:Spacer width="0.3em"/>
            <g:TextBox ui:field="cockcroftGfrStadium" enabled="false" width="1.6em" height="1.6em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:Label text="Rischio CKD"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="cockcroftRiskBox" enabled="false" width="7.2em" height="1.6em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
             <g:Label text="MDRD" addStyleNames="{style.valoriLbl}" width="100%"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:Label text="GFR (ml/min)"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="mdrdGfrBox" enabled="false" width="5em" height="1.6em"/>
            <gc:Spacer width="0.3em"/>
            <g:TextBox ui:field="mdrdGfrStadium" enabled="false" width="1.6em" height="1.6em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:Label text="Rischio CKD"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="mdrdRiskBox" enabled="false" width="7.2em" height="1.6em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      </table>  
  
