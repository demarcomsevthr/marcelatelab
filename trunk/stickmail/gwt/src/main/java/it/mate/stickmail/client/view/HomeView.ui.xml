<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel">
  
    <gc:Spacer addStyleNames="ui-homeSpacer1"/>
    
    <g:HorizontalPanel width="100%" horizontalAlignment="center">
      <p:TouchAnchor addStyleNames="ui-scheduled-mails-btn" text="Scheduled Mails" ui:field="mailListBtn2"/>
      <p:TouchAnchor addStyleNames="ui-new-mail-btn" text="New Mail" ui:field="newMailBtn2"/>
    </g:HorizontalPanel>
    
    <g:Label ui:field="homeLbl" addStyleNames="ui-homeLbl"/>
    
    <gc:SimpleContainer addStyleNames="ui-firstRunPanel" ui:field="firstRunPanel" >
      <gc:SimpleContainer addStyleNames="ui-firstRunPanel-top">
        <g:Label ui:field="firstRunTitleLbl"/>
      </gc:SimpleContainer>
      <gc:SimpleContainer addStyleNames="ui-firstRunPanel-content">
        <gc:Spacer height="1px" addStyleNames="ui-firstRunPanel-content-spacer"/>
        <g:HTML ui:field="firstRunLbl" addStyleNames="ui-firstRunLbl"/>
        <p:TouchHTML text="login" addStyleNames="ui-firstRunLink" ui:field="helloBtn"/>
        <gc:Spacer height="1.2em"/>
      </gc:SimpleContainer>
    </gc:SimpleContainer>
    
  </g:HTMLPanel>
  
</ui:UiBinder>