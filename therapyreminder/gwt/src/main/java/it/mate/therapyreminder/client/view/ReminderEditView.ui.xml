<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph" xmlns:s="urn:import:it.mate.therapyreminder.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel, ui-homePanel-clearHeight, ui-therapy-panel">
      
    <g:HTML HTML="Promemoria" addStyleNames="ui-view-header"/>
    
    <g:HorizontalPanel addStyleNames="ui-top-button-bar" spacing="0">
      <p:TouchButton text="EXECUTE" ui:field="execBtn" addStyleNames="ui-top-action-btn" visible="false"/>
    </g:HorizontalPanel>

    <hr class="ui-view-separator-1"/>
    
    <g:Label text="Farmaco:" addStyleNames="ui-field-label ui-field-label-1"/>
    <ph:PhTextBox ui:field="titleBox" addStyleNames="ui-app-textbox, ui-title-box"/>

    <hr class="ui-view-separator"/>
    
    <g:Label text="Data:" addStyleNames="ui-field-label"/>
    <ph:PhTextBox ui:field="dateBox" addStyleNames="ui-app-textbox, ui-title-box"/>
    
    <hr class="ui-view-separator"/>
    
    <g:HTML HTML="QuantitÃ :" addStyleNames="ui-field-label"/>
    <gc:Spacer height="0.3em"/>
    <g:HorizontalPanel>
      <ph:PhTextBox ui:field="qtaBox" addStyleNames="ui-app-textbox, ui-qta-box" type="number"/>
      <ph:PhTextBox ui:field="umBox" addStyleNames="ui-app-textbox, ui-um-box"/>
    </g:HorizontalPanel>
        
    <hr class="ui-view-separator"/>
    
    <g:Label text="Ora:" addStyleNames="ui-inline-label" width="7em"/>
    <ph:PhTextBox ui:field="oraBox" addStyleNames="ui-app-textbox, ui-orario-box"/>
    
  </g:HTMLPanel>
  
</ui:UiBinder>