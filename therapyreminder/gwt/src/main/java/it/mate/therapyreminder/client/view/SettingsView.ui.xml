<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph" xmlns:s="urn:import:it.mate.therapyreminder.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel, ui-homePanel-clearHeight, ui-settings-panel">
      
    <g:HTML HTML="Settings" addStyleNames="ui-view-header"/>
    
    <g:HorizontalPanel addStyleNames="ui-top-button-bar" spacing="0">
      <p:TouchButton text="Clear DB" ui:field="resetBtn" addStyleNames="ui-top-action-btn"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel addStyleNames="ui-top-button-bar" spacing="0">
      <p:TouchButton text="Dump DB" ui:field="dumpBtn" addStyleNames="ui-top-action-btn"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel addStyleNames="ui-top-button-bar" spacing="0">
      <p:TouchButton text="Start trace" ui:field="traceBtn" addStyleNames="ui-top-action-btn"/>
    </g:HorizontalPanel>

    <hr class="ui-view-separator-1"/>
    
    <g:HorizontalPanel>
      <g:HTML HTML="Online mode:" addStyleNames="ui-field-label ui-app-online-mode-label"/>
      <ph:PhCheckBox addStyleNames="ui-app-online-mode" ui:field="ckbOnlineMode"/>
    </g:HorizontalPanel>
        
    <g:HorizontalPanel addStyleNames="ui-top-button-bar" spacing="0" ui:field="accountPanel" visible="false">
      <p:TouchButton text="Account" ui:field="accountBtn" addStyleNames="ui-top-action-btn"/>
    </g:HorizontalPanel>

  </g:HTMLPanel>
  
</ui:UiBinder>