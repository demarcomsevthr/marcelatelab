<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget"
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:p="urn:import:it.mate.phgcommons.client.ui" 
       xmlns:ph="urn:import:it.mate.phgcommons.client.ui.ph" xmlns:s="urn:import:it.mate.therapyreminder.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ui-homePanel, ui-homePanel-clearHeight, ui-settings-panel">
      
    <g:HTML HTML="Settings" addStyleNames="ui-view-header"/>
    
    <g:HorizontalPanel addStyleNames="ui-setting-row">
      <g:HTML HTML="Debug" addStyleNames="ui-settings-label ui-app-online-mode-label"/>
      <p:TouchButton text="Clear DB" ui:field="resetBtn" addStyleNames="ui-settings-btn"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel addStyleNames="ui-setting-row">
      <g:HTML HTML="" addStyleNames="ui-settings-label ui-app-online-mode-label"/>
      <p:TouchButton text="Dump DB" ui:field="dumpBtn" addStyleNames="ui-settings-btn"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel addStyleNames="ui-setting-row">
      <g:HTML HTML="" addStyleNames="ui-settings-label ui-app-online-mode-label"/>
      <p:TouchButton text="Start trace" ui:field="traceBtn" addStyleNames="ui-settings-btn"/>
    </g:HorizontalPanel>
    
    <hr class="ui-settings-separator"/>
    <g:HorizontalPanel addStyleNames="ui-setting-row">
      <g:HTML HTML="Language:" addStyleNames="ui-settings-label ui-app-online-mode-label"/>
      <p:TouchCombo ui:field="langCmb" addStyleNames="ui-app-combobox, ui-lang-combobox"/>
    </g:HorizontalPanel>
    
    <hr class="ui-settings-separator"/>
    <g:HorizontalPanel addStyleNames="ui-setting-row">
      <g:HTML HTML="Online mode:" addStyleNames="ui-settings-label ui-app-online-mode-label"/>
      <ph:PhCheckBox addStyleNames="ui-app-online-mode-ckb" ui:field="cbxOnlineMode"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel addStyleNames="ui-setting-row" spacing="0" ui:field="accountPanel" visible="false">
      <g:HTML HTML="Account:" addStyleNames="ui-settings-label ui-app-account-label"/>
      <p:TouchButton text="Edit" ui:field="accountBtn" addStyleNames="ui-settings-btn"/>
    </g:HorizontalPanel>
    
    <hr class="ui-settings-separator"/>
    <g:HTMLPanel>
      <gc:Spacer height="0.5em"/>
      <p:TouchHTML text="Legal Notes" addStyleNames="ui-settings-label ui-app-legal-notes-label" ui:field="legalNotesBtn"/>
    </g:HTMLPanel>    

  </g:HTMLPanel>
  
</ui:UiBinder>