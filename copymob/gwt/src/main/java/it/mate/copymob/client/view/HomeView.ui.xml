<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
       ui:generateLocales="default" xmlns:o="urn:import:it.mate.onscommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="app-page-wrapper-panel">

    <o:OnsPage>
    
      <o:OnsToolbar>
        <div class="left">
          <o:OnsToolbarButton ui:field="btnMenu" visible="false"><o:OnsIcon icon="fa-bars"/></o:OnsToolbarButton>
        </div>
        <div class="center">TIMBRI COPYCART</div>
      </o:OnsToolbar>
  
      <g:HTML addStyleNames="app-home-presentation">
        <i>Presentazione servizio qui</i>
      </g:HTML>
  
      <g:VerticalPanel horizontalAlignment="left" addStyleNames="app-home-buttonbar">
        <o:OnsButton ui:field="btnTimbri" addStyleNames="app-home-btnpanel app-btn-img2" text="Timbri"/>
        <o:OnsButton ui:field="btnCategorie" addStyleNames="app-home-btnpanel app-btn-img2" text="Categorie"/>
        <o:OnsButton ui:field="btnCart" addStyleNames="app-home-btnpanel" icon="fa-shopping-cart" text="Carrello"/>
        <o:OnsButton ui:field="btnOrdini" addStyleNames="app-home-btnpanel" icon="fa-credit-card" text="Ordini"/>
        <o:OnsButton ui:field="btnSettings" addStyleNames="app-home-btnpanel" icon="fa-cog" text="Settings"/>
      </g:VerticalPanel>
      
      <g:Label ui:field="homeLbl" addStyleNames="app-home-lbl"/>
      
    </o:OnsPage>
    
  </g:HTMLPanel>
  
</ui:UiBinder>