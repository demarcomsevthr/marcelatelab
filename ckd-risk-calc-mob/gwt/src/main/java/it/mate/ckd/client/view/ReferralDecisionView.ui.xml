<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:p="urn:import:it.mate.phgcommons.client.ui" xmlns:gc="urn:import:it.mate.gwtcommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ckdHomePanel, ckdReferralDecisionViewPanel">
  
  
    <g:VerticalPanel horizontalAlignment="CENTER" verticalAlignment="MIDDLE" width="100%" height="60%">

      <g:VerticalPanel height="200px" verticalAlignment="MIDDLE" addStyleNames="vert1">
        <g:HorizontalPanel>
          <g:Label text="Suggested referral decision:"/>
          <g:Label text="MONITOR" addStyleNames="ckdSuggestedReferralDecision"/>
        </g:HorizontalPanel>
      </g:VerticalPanel>

      <gc:Spacer height="1em"/>
    
      <g:VerticalPanel height="200px" verticalAlignment="MIDDLE" addStyleNames="vert2" horizontalAlignment="CENTER">
        <g:Label text="Do you want to start the protocol workflow?"></g:Label>
        <g:HorizontalPanel>
          <p:SmartButton text="Yes" ui:field="yesBtn"></p:SmartButton>
          <p:SmartButton text="No" ui:field="noBtn"></p:SmartButton>
        </g:HorizontalPanel>
      </g:VerticalPanel>
    
    
    </g:VerticalPanel>
  
      

  </g:HTMLPanel>
  
</ui:UiBinder>