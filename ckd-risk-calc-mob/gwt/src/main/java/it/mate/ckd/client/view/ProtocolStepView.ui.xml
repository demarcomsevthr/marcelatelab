<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:p="urn:import:it.mate.phgcommons.client.ui">
       
  <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="ckdHomePanel, ckdProtocolStepViewPanel">
  
  
    <g:VerticalPanel horizontalAlignment="CENTER" verticalAlignment="MIDDLE" width="100%" height="80%" ui:field="stepPanel">
    
      <g:VerticalPanel horizontalAlignment="CENTER" verticalAlignment="MIDDLE" width="100%" height="300px">
        <p:SmartButton ui:field="backBtn" text="Back" addStyleNames="ckdProtocolBackBtn" visible="false"/>
        <g:HTML ui:field="questionHtml"></g:HTML>
        <g:HorizontalPanel>
          <p:SmartButton ui:field="answer1Btn"/>
          <p:SmartButton ui:field="answer2Btn"/>
        </g:HorizontalPanel>
      </g:VerticalPanel>
      
      <g:VerticalPanel horizontalAlignment="CENTER" verticalAlignment="MIDDLE" width="100%" height="200px" ui:field="endPanel" visible="false">
        <g:HTML ui:field="endHtml"></g:HTML>
        <p:SmartButton ui:field="gfrBtn" text="Go To GFR" width="6em"/>
      </g:VerticalPanel>
    
    </g:VerticalPanel>
  

  </g:HTMLPanel>
  
</ui:UiBinder>