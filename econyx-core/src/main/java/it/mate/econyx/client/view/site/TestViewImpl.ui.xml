<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:e="urn:import:it.mate.econyx.client.ui">

  <ui:style>
    .paddedPanel {
	  padding: 20px;
	}
    .registrationCompletePanel * {
	  font-size: 16px;
	}
  </ui:style>  
  
  <g:HTMLPanel>
  
    <g:VerticalPanel width="100%">
      <g:HTMLPanel>
        
    <g:HTMLPanel ui:field="successRegistrationStatePanelWithBorderRadius" visible="true" addStyleNames="{style.registrationCompletePanel}">
      <g:SimplePanel width="600px" addStyleNames="{style.paddedPanel}">
        <g:HTMLPanel ui:field="roundedPanel">
          <g:HTMLPanel addStyleNames="{style.paddedPanel}">
            <div>Apri la tua posta in arrivo.</div>
            <div><br/>
            Hai ricevuto un messaggio e-mail all'indirizzo specificato.<br/> 
            Devi selezionare il collegamento contenuto in questo messaggio per completare la registrazione.<br/>
            Quindi potrai accedere all'area clienti di questo sito.</div>
          </g:HTMLPanel>
        </g:HTMLPanel>
      </g:SimplePanel>
    </g:HTMLPanel>
        
      </g:HTMLPanel>
    </g:VerticalPanel>
  
  </g:HTMLPanel>


</ui:UiBinder>