<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:t="urn:import:it.mate.econyx.client.text" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" 
       xmlns:e="urn:import:it.mate.econyx.client.ui.editors">

  <g:HTMLPanel addStyleNames="gwt-registrationForm">
    <g:VerticalPanel width="600px">
      <g:Label text="Dati utente" addStyleNames="gwt-Label-Section" ui:field="portalUserLabel"/>
      <e:PortalUserRegistrationEditor ui:field="portalUser"/>
      <gc:Spacer height="1em"/>
      <g:Label text="Indirizzo di spedizione" addStyleNames="gwt-Label-Section"/>
      <e:IndirizzoEditor ui:field="indirizzoSpedizione"/>
      <gc:Spacer height="1em"/>
      <g:Label text="Indirizzo di fatturazione" addStyleNames="gwt-Label-Section"/>
      <e:IndirizzoEditor ui:field="indirizzoFatturazione"/>
      <gc:Spacer height="1em"/>
      <g:HTMLPanel><hr/></g:HTMLPanel>
    </g:VerticalPanel>
  </g:HTMLPanel>

</ui:UiBinder>