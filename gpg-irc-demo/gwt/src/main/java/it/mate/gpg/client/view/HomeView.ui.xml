<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:g="urn:import:com.google.gwt.user.client.ui" 
       xmlns:gc="urn:import:it.mate.gwtcommons.client.ui" xmlns:gpg="urn:import:it.mate.gpg.client.ui" xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">
       
  <ui:style>
  
    @external .gwt-Label, .boxSpacer;

    .homePanel {
	  padding-top: 1em;
	  padding-left: 1em;
	}
	
    .homePanel * {
	  font-size: 16px;
	  vertical-align: middle;
	}
	
    .homePanel td {
	  padding-top: 0.1em;
	}
	
	.homePanel .gwt-Label {
	  width: 4.2em;
	}
  
	.homePanel input {
	  width: 3em;
	  text-align: center;
	}
	
	.homePanel button {
	  font-size: 16px;
	  font-weight: bolder;
    }
	
	.valoriLbl {
	  font-size: 16px;
	  font-weight: bolder;
	  background-color: #666666;
	  height: 1.6em;
	  padding-top: 5px;
    }
	
	.boxSpacer {
	  width: 0.5em !important;
	}
  
	.verLbl {
	  font-size: 8px;
    }
	
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.homePanel}">

    <table>
    
      <tr>
        <td>
          <g:Label text="EtÃ  (anni)"/>
        </td>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <gpg:SpinnerIntegerBox ui:field="etaSpinBox" value="50"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:Label text="Creatinina (mg/dl)"/>
        </td>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <gpg:SpinnerDoubleBox ui:field="creatininaSpinBox" value="1"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:Label text="Peso (kg)"/>
        </td>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <gpg:SpinnerIntegerBox ui:field="pesoSpinBox" value="70"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <!-- 
      <tr>
        <td>
          <g:Label text="Altezza (cm)"/>
        </td>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <gpg:SpinnerIntegerBox ui:field="altezzaSpinBox" value="170"/>
          </g:HorizontalPanel>
        </td>
      </tr>
       -->
    
      <tr>
        <td>
          <g:Label text="Sesso"/>
        </td>
        <td>
           <g:HorizontalPanel>
             <gc:Spacer width="24px"/>
             <g:VerticalPanel spacing="0">
               <g:RadioButton ui:field="mBtn" name="sex" text="maschio" checked="true"/>
               <g:RadioButton ui:field="fBtn" name="sex" text="femmina"/>
             </g:VerticalPanel>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:Label text="Albuminur. (mg)"/>
        </td>
        <td>
          <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
              <gpg:SpinnerIntegerBox ui:field="albuminuriaSpinBox" value="10"/>
            <!-- 
            <g:VerticalPanel spacing="0">
              <gc:Spacer height="0.1em"/>
            </g:VerticalPanel>
             -->
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <gc:Spacer height="0.6em"/>
        </td>
      </tr>
    
      <tr>
        <td colspan="2">
          <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" width="100%">
            <!-- 
            <m:Button text="Valori GFR e IRC:" ui:field="calcBtn"/>
             -->
             <g:Label text="Valori di GFR e IRC:" addStyleNames="{style.valoriLbl}" width="100%" ui:field="valoriLbl"/>
          </g:HorizontalPanel>
        </td>
      </tr>
    
      <tr>
        <td>
          <g:Label text="GFR (ml/min)"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="vfgBox" enabled="false" width="5em" height="1.6em"/>
            <gc:Spacer width="0.3em"/>
            <g:TextBox ui:field="stadioVfgBox" enabled="false" width="2.2em" height="2.2em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td>
          <g:Label text="Rischio IRC"/>
        </td>
        <td>
           <g:HorizontalPanel>
            <gc:Spacer addStyleNames="{style.boxSpacer}"/>
            <g:TextBox ui:field="ircBox" enabled="false" width="6em" height="1.6em"/>
           </g:HorizontalPanel>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
      <tr>
        <td colspan="2">
          <g:Label text="(v. 0.003)" addStyleNames="{style.verLbl}"/>
        </td>
      </tr>
      
      <tr>
        <td colspan="2">
          <gc:Spacer height="1em"/>
        </td>
      </tr>
    
    </table>  
  
  
  </g:HTMLPanel>
  
</ui:UiBinder>